{
  "compilerOptions": {
    "outDir": "./src/lib",
    "target": "es2015",
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "jsx": "react",
    "typeRoots": [
      "src/index.d.ts",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/component/**/*.tsx",
    "src/component/**/*.ts",
    "src/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
